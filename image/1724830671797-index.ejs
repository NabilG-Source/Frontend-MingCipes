          <div class="dos commentar_input">
            <div class="group">
              <img src="/image/user.jpg" alt="" />
              <input
                type="text"
                class="inputed"
                placeholder="Berikan komentarmu😊"
                name=""
                id=""
              />
              <button class="btn-sendct false">
                <i class="fa-solid fa-arrow-up"></i>
              </button>
            </div>
          </div>
